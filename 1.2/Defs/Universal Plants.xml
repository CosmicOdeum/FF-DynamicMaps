<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--====================================== Carpets ======================================== -->

  <ThingDef ParentName="PlantBase">
    <defName>DM_Pansy</defName>
    <label>pansy</label>
    <description>A beautiful flower that comes in many colors. Pansies are hybrids derived from a wild violet known as heartsease.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Flammability>1.3</Flammability>
      <Nutrition>0.25</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Pansy</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible />
    <plant>
      <fertilityMin>0.05</fertilityMin>
      <fertilitySensitivity>0.3</fertilitySensitivity>
      <growDays>2.5</growDays>
      <harvestWork>40</harvestWork>
      <maxMeshCount>9</maxMeshCount>
      <visualSizeRange>0.4~0.6</visualSizeRange>
      <topWindExposure>0.4</topWindExposure>
      <wildOrder>1</wildOrder>
    </plant>
  </ThingDef>
  
  <ThingDef ParentName="PlantBase">
    <defName>DM_Daffodil</defName>
    <label>daffodil</label>
    <description>A common white and yellow flower that can grow in stony soil. Daffodils can survive the harsh cold of winter using their bulbs.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Flammability>1.3</Flammability>
      <Nutrition>0.25</Nutrition>
    </statBases>
    <modExtensions>
      <li Class="DynamicMaps.DM_ModExtension">
        <season>Spring</season>
        <commonality>3</commonality>
        <spawnInNextSeason>true</spawnInNextSeason>
      </li>
    </modExtensions>
    <graphicData>
      <texPath>Daffodil</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible />
    <plant>
      <fertilityMin>0.7</fertilityMin>
      <fertilitySensitivity>0.4</fertilitySensitivity>
      <growDays>2.5</growDays>
      <dieIfLeafless>false</dieIfLeafless>
      <harvestWork>40</harvestWork>
      <maxMeshCount>9</maxMeshCount>
      <visualSizeRange>0.4~0.6</visualSizeRange>
      <topWindExposure>0.4</topWindExposure>
      <wildOrder>1</wildOrder>
    </plant>
  </ThingDef>

  <ThingDef ParentName="PlantBase">
    <defName>Plant_Dandelion</defName>
    <label>dandelion</label>
    <description>A common yellow flower often viewed as a weed. The florets mature into whimsical puffs of wind-catching seeds. Some midworlds observe a tradition of blowing out a dandelion puff while making a wish.</description>
    <thingClass>DynamicMaps.DM_Plant</thingClass>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Flammability>1.3</Flammability>
      <Nutrition>0.25</Nutrition>
    </statBases>
    <modExtensions>
      <li Class="DynamicMaps.DM_ModExtension">
        <semiMaturePath>Dandelion/Dandelion</semiMaturePath>
        <season>Spring</season>
        <commonality>3</commonality>
        <spawnInNextSeason>true</spawnInNextSeason>
      </li>
    </modExtensions>
    <graphicData>
      <texPath>Dandelion/OldDandelion</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible />
    <plant>
      <immatureGraphicPath>Dandelion/ImmatureDandelion</immatureGraphicPath>
      <harvestMinGrowth>0.70</harvestMinGrowth>
      <fertilityMin>0.05</fertilityMin>
      <fertilitySensitivity>0.3</fertilitySensitivity>
      <growDays>5</growDays>
      <lifespanDaysPerGrowDays>2</lifespanDaysPerGrowDays>
      <harvestWork>40</harvestWork>
      <maxMeshCount>9</maxMeshCount>
      <visualSizeRange>0.2~0.4</visualSizeRange>
      <topWindExposure>0.4</topWindExposure>
      <wildOrder>1</wildOrder>
    </plant>
  </ThingDef>

  <ThingDef ParentName="BushBase">
    <defName>Plant_Hydrangea</defName>
    <label>hydrangea</label>
    <description>A flowering shrub that grows well in areas with high rainfall. Hydrangeas produce large, bouquet-like flowerheads and are moderately toxic if eaten.</description>
    <thingClass>DynamicMaps.DM_Plant</thingClass>
    <statBases>
      <Flammability>1.3</Flammability>
    </statBases>
    <modExtensions>
      <li Class="DynamicMaps.DM_ModExtension">
        <season>Spring</season>
        <commonality>3</commonality>
        <spawnInNextSeason>true</spawnInNextSeason>
      </li>
    </modExtensions>
    <graphicData>
      <texPath>Hydrangea</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <fillPercent>0.20</fillPercent>
    <pathCost>30</pathCost>
    <ingestible />
    <plant>
      <leaflessGraphicPath>Things/Plant/Bush_Leafless</leaflessGraphicPath>
      <fertilityMin>0.5</fertilityMin>
      <fertilitySensitivity>0.5</fertilitySensitivity>
      <growDays>6</growDays>
      <wildClusterRadius>4</wildClusterRadius>
      <wildClusterWeight>250</wildClusterWeight>
      <harvestWork>40</harvestWork>
      <visualSizeRange>0.7~1.1</visualSizeRange>
      <topWindExposure>0.20</topWindExposure>
      <wildOrder>2</wildOrder>
    </plant>
  </ThingDef>

  <ThingDef ParentName="PlantBase">
    <defName>Plant_Inkcap</defName>
    <label>inkcap</label>
    <description>A small white mushroom that can sprout just about anywhere. Inkcaps decompose rapidly into a black liquid, though very young mushrooms are edible.</description>
    <thingClass>DynamicMaps.DM_Plant</thingClass>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.6</Flammability>
      <Nutrition>0.15</Nutrition>
    </statBases>
    <modExtensions>
      <li Class="DynamicMaps.DM_ModExtension">
        <semiMaturePath>Inkcap/Inkcap</semiMaturePath>
        <season>Spring</season>
        <commonality>3</commonality>
        <spawnInNextSeason>true</spawnInNextSeason>
        <harvestMaxGrowth>0.5</harvestMaxGrowth>
      </li>
    </modExtensions>
    <selectable>true</selectable>
    <graphicData>
      <texPath>Inkcap/OldInkcap</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible />
    <plant>
      <immatureGraphicPath>Inkcap/ImmatureInkcap</immatureGraphicPath>
      <harvestedThingDef>RawFungus</harvestedThingDef>
      <fertilityMin>0.5</fertilityMin>
      <fertilitySensitivity>0.25</fertilitySensitivity>
      <growDays>1.5</growDays>
      <harvestYield>5</harvestYield>
      <harvestTag>Standard</harvestTag>
      <lifespanDaysPerGrowDays>1.5</lifespanDaysPerGrowDays>
      <harvestWork>40</harvestWork>
      <maxMeshCount>4</maxMeshCount>
      <visualSizeRange>0.3~0.6</visualSizeRange>
      <topWindExposure>0.5</topWindExposure>
      <wildOrder>3</wildOrder>
      <wildClusterRadius>3</wildClusterRadius>
      <wildClusterWeight>5</wildClusterWeight>
      <harvestMinGrowth>0.05</harvestMinGrowth>
      <purpose>Food</purpose>
<!-- These are the extra tags I added that made the multistage graphics stop working, pretty sure it's the harvest thing but I haven't tested it yet
      <dieIfLeafless>true</dieIfLeafless>
      <growDays>2</growDays>
      <harvestTag>Standard</harvestTag>
      <harvestYield>20</harvestYield>
      <harvestedThingDef>RawFungus</harvestedThingDef>
      <growMinGlow>0</growMinGlow>
      <growOptimalGlow>0</growOptimalGlow>
      <neverBlightable>true</neverBlightable>
-->
    </plant>
  </ThingDef>

