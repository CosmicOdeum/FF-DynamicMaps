  <ThingDef ParentName="TreeBase">
    <defName>DM_GravekTwister</defName>
    <label>gravel twisters</label>
    <description>A large plant able to grow in rocky soil.</description>
    <statBases>
      <MaxHitPoints>130</MaxHitPoints>
      <Nutrition>1.5</Nutrition>
    </statBases>
    <graphicData>
      <texPath>GravelTwister</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.24, 0.3, 0.15)</volume>
        <offset>(0,0,-0.38)</offset>
