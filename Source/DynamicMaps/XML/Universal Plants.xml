  <ThingDef ParentName="PlantBase">
    <defName>DM_Inkcap</defName>
    <label>inkcap</label>
    <description>A shaggy white mushroom. They're edible when they first sprout, but they quickly decompose into a black liquid.</description>
    <thingClass>DynamicMaps.DM_Plant</thingClass>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.6</Flammability>
      <Nutrition>0.15</Nutrition>
    </statBases>
    <modExtensions>
      <li Class="DynamicMaps.DM_ModExtension">
        <semiMaturePath>Inkcap/Inkcap</semiMaturePath>
        <season>Spring</season>
        <commonality>30</commonality>
        <spawnInNextSeason>true</spawnInNextSeason>
        <needsRain>true</needsRain>
        <harvestMaxGrowth>0.5</harvestMaxGrowth>
      </li>
    </modExtensions>
    <selectable>true</selectable>
    <graphicData>
      <texPath>Inkcap/OldInkcap</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth> 
    <ingestible />
    <plant>
      <immatureGraphicPath>Inkcap/ImmatureInkcap</immatureGraphicPath>
      <harvestedThingDef>RawFungus</harvestedThingDef>
      <fertilityMin>0.05</fertilityMin>
      <fertilitySensitivity>0.15</fertilitySensitivity>
      <growDays>4</growDays>
      <harvestYield>20</harvestYield>
      <harvestTag>Standard</harvestTag>
      <lifespanDaysPerGrowDays>0.25</lifespanDaysPerGrowDays>
      <topWindExposure>0.05</topWindExposure>
      <visualSizeRange>0.4~0.7</visualSizeRange>
      <wildOrder>1</wildOrder>
      <wildClusterRadius>4</wildClusterRadius>
      <wildClusterWeight>250</wildClusterWeight>
      <maxMeshCount>9</maxMeshCount>
      <harvestMinGrowth>0.05</harvestMinGrowth>
      <growMinGlow>0</growMinGlow>
      <growOptimalGlow>0</growOptimalGlow>
      <dieIfLeafless>true</dieIfLeafless>
      <purpose>Food</purpose>
      <neverBlightable>true</neverBlightable>
    </plant>
  </ThingDef>

