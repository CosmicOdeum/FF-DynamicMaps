<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--====================================== Carpets ======================================== -->

  <ThingDef ParentName="PlantBase">
    <defName>DM_Pansy</defName>
    <label>pansy</label>
    <description>A beautiful flower that comes in many colors. It was long ago cultivated from a variety of wild violet.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.25</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Pansy</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible />
    <plant>
      <fertilityMin>0.05</fertilityMin>
      <fertilitySensitivity>0.3</fertilitySensitivity>
      <growDays>2.5</growDays>
      <harvestWork>40</harvestWork>
      <maxMeshCount>9</maxMeshCount>
      <visualSizeRange>0.4~0.6</visualSizeRange>
      <topWindExposure>0.4</topWindExposure>
      <wildOrder>1</wildOrder>
    </plant>
  </ThingDef>
  
  <ThingDef ParentName="PlantBase">
    <defName>DM_Daffodil</defName>
    <label>daffodil</label>
    <description>A pretty white and yellow flower that grows from a bulb. Its great beauty has led it to symbolize everything from fortune and wealth to vanity and death.</description>
    <statBases>
      <Beauty>4</Beauty>
      <MaxHitPoints>85</MaxHitPoints>
      <Flammability>1.3</Flammability>
      <Nutrition>0.25</Nutrition>
    </statBases>
    <modExtensions>
      <li Class="DynamicMaps.DM_ModExtension">
        <season>Spring</season>
        <commonality>1</commonality>
        <spawnInNextSeason>true</spawnInNextSeason>
      </li>
    </modExtensions>
    <graphicData>
      <texPath>Daffodil</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible />
    <plant>
      <fertilityMin>0.7</fertilityMin>
      <fertilitySensitivity>0.4</fertilitySensitivity>
      <growDays>2.5</growDays>
      <dieIfLeafless>false</dieIfLeafless>
      <maxMeshCount>9</maxMeshCount>
      <wildClusterRadius>3</wildClusterRadius>
      <wildClusterWeight>15</wildClusterWeight>
      <visualSizeRange>0.4~0.6</visualSizeRange>
      <topWindExposure>0.4</topWindExposure>
      <wildOrder>1</wildOrder>
    </plant>
  </ThingDef>

  <ThingDef ParentName="PlantBase">
    <defName>DM_Trillium</defName>
    <label>trillium</label>
    <description>A small white flower found in moist areas. Its three prominent "leaves" are extensions of the flower itself.</description>
    <statBases>
      <Beauty>5</Beauty>
      <MaxHitPoints>85</MaxHitPoints>
      <Flammability>1.3</Flammability>
      <Nutrition>0.25</Nutrition>
    </statBases>
    <modExtensions>
      <li Class="DynamicMaps.DM_ModExtension">
        <season>Spring</season>
        <commonality>1</commonality>
        <spawnInNextSeason>false</spawnInNextSeason>
        <minRainfall>1100</minRainfall>
      </li>
    </modExtensions>
    <graphicData>
      <texPath>Trillium</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible />
    <plant>
      <fertilityMin>1</fertilityMin>
      <fertilitySensitivity>0.8</fertilitySensitivity>
      <growDays>7.5</growDays>
      <maxMeshCount>4</maxMeshCount>
      <dieIfLeafless>true</dieIfLeafless>
      <wildClusterRadius>3</wildClusterRadius>
      <wildClusterWeight>25</wildClusterWeight>
      <visualSizeRange>0.2~0.4</visualSizeRange>
      <topWindExposure>0.4</topWindExposure>
      <wildOrder>3</wildOrder>
    </plant>
  </ThingDef>
  
  <ThingDef ParentName="PlantBase">
    <defName>Plant_Dandelion</defName>
    <thingClass>DynamicMaps.DM_Plant</thingClass>
    <label>dandelions</label>
    <description>A tiny yellow flower which grows in large clusters. Though it is often considered a weed, dandelions in bloom are quite beautiful.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>4</Beauty>
      <Nutrition>0.18</Nutrition>
    </statBases>
    <modExtensions>
      <li Class="DynamicMaps.DM_ModExtension">
        <semiMaturePath>Dandelion/Dandelion</semiMaturePath>
        <season>Spring</season>
        <commonality>3</commonality>
        <spawnInNextSeason>true</spawnInNextSeason>
      </li>
    </modExtensions>
    <graphicData>
      <texPath>Dandelion/OldDandelion</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible />
    <plant>
      <immatureGraphicPath>Dandelion/ImmatureDandelion</immatureGraphicPath>
      <fertilitySensitivity>0.0</fertilitySensitivity>
      <growDays>2.5</growDays>
      <sowTags>
        <li>Ground</li>
      </sowTags>
      <fertilityMin>0.05</fertilityMin>
      <maxMeshCount>25</maxMeshCount>
      <visualSizeRange>0.3~0.4</visualSizeRange>
      <topWindExposure>0.3</topWindExposure>
      <wildClusterRadius>4</wildClusterRadius>
      <wildClusterWeight>8</wildClusterWeight>
      <wildOrder>1</wildOrder>
      <purpose>Beauty</purpose>
    </plant>
  </ThingDef>

  <ThingDef ParentName="BushBase">
    <defName>DM_Hydrangea</defName>
    <label>hydrangea</label>
    <description>A flowering shrub that produces large, bouquet-like flowerheads.</description>
    <thingClass>DynamicMaps.DM_Plant</thingClass>
    <statBases>
      <Flammability>1.3</Flammability>
    </statBases>
    <modExtensions>
      <li Class="DynamicMaps.DM_ModExtension">
        <season>Spring</season>
        <commonality>3</commonality>
        <spawnInNextSeason>true</spawnInNextSeason>
        <minRainfall>900</minRainfall>
      </li>
    </modExtensions>
    <graphicData>
      <texPath>Hydrangea</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <fillPercent>0.20</fillPercent>
    <pathCost>30</pathCost>
    <ingestible />
    <plant>
      <leaflessGraphicPath>Things/Plant/Bush_Leafless</leaflessGraphicPath>
      <fertilityMin>0.5</fertilityMin>
      <fertilitySensitivity>0.5</fertilitySensitivity>
      <growDays>6</growDays>
      <wildClusterRadius>4</wildClusterRadius>
      <wildClusterWeight>250</wildClusterWeight>
      <maxMeshCount>9</maxMeshCount>
      <harvestWork>40</harvestWork>
      <visualSizeRange>0.7~1.1</visualSizeRange>
      <topWindExposure>0.20</topWindExposure>
      <wildOrder>2</wildOrder>
    </plant>
  </ThingDef>

  <ThingDef ParentName="PlantBase">
